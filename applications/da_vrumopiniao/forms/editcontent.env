                             req here/request;
                             id_site req/id_site;
                             id_conteudo req/id_conteudo;
                             id_treeapp python:req.get('id_treeapp', '');
                             id_aplicativo req/id_aplicativo;
                             schema req/schema;
                             meta_type req/meta_type;
                             portal here/portal;
                             util here/util;
                             file here/file;
                             instance python:here.app(schema=schema);
                             dados_conteudo python:instance._getContent(id_conteudo);
                             dados python:portal._getDadosTreeApp(env_site=id_site,
                                                                  id_treeapp=id_treeapp);
