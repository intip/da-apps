<tal:block tal:define="macro python:here.macros('/app/macroform.env'); 
                             req here/request;
                             id_site req/id_site;
                             id_aplicativo req/id_aplicativo;
                             schema req/schema;
                             portal here/portal;
                             util here/util;
                             file here/file;
                             dados python:portal._getApp(env_site=id_site, id_aplicativo=id_aplicativo);
                             dadoss dados/dados;
                             ips python:'\n'.join(dadoss['ips']) if dadoss['ips'] else None">
<metal_macro metal:use-macro="macro/macros/form">

<slot_script metal:fill-slot="javascripts">
  <script type="text/javascript" src="/extensao/js/rss.js"></script>
  <script type="text/javascript" tal:content="structure python:util.py2js(ID_SITE=id_site, SCHEMA=schema, 
                                                                          BASEMETHOD=portal._getUrlAppMethod(meta_type=dados['meta_type'], 
                                                                          schema=dados  ['schema'], id_site=id_site), 
                                                                          ID_APLICATIVO=id_aplicativo)"></script>
  <script type="text/javascript">
  /*<![CDATA[*/
  var abas = ['dados', 'rss'];
$(document).ready(function(){
    $("#tipo_bloqueio").change(function(){
      bloqueio = $(this).val();
      if (bloqueio == "periodo"){
        $("#bloqueio_numero").val("");
        $("#bloqnumero").hide();
        $("#bloqperiodo").show();
      }else{
         $("#bloqueio_numero").val("");
         $("#bloqnumero").show();
         $("#bloqperiodo").hide();
       }
    });
});
  function validaForm()
  {
      clearAllMsgs();
      var form = document.forms[0];
      var errs = [];
      with (form)
      {
          if (isEmpty(title.value)) errs.push('O campo t&iacute;tulo &eacute; obrigat&oacute;rio.');
          if (isEmpty(auth.value)) errs.push('O campo autentica&ccedil;&atilde;o &eacute; obrigat&oacute;rio.');
          if (isEmpty(captcha.value)) errs.push('O campo captcha &eacute; obrigat&oacute;rio.');
          if (isEmpty(tipo.value)) errs.push('O campo tipo &eacute; obrigat&oacute;rio.');
          if (isEmpty(id_servico.value)) errs.push('O id servi&ccedil;o &eacute; obrigat&oacute;rio.');
          if (isEmpty(bloqueio_numero.value))errs.push('O valor do tipo de bloqueio &eacute; obrigat&oacute;rio.');
          if (errs.length > 0)
          {
              showError(errs);
          } else {
             var dados = {};
             dados['env_site'] = ID_SITE;
             dados['schema'] = SCHEMA;
             dados['title'] = title.value;
             dados['auth'] = auth.value;
             dados['captcha'] = captcha.value;
             dados['ips'] = ips.value;
             dados['tipo'] = tipo.value;
             dados['id_servico'] = id_servico.value;
             dados['tipo_bloqueio'] = tipo_bloqueio.value;
             dados['bloqueio_numero'] = bloqueio_numero.value;

             addRss(dados); // Rss

             aguarde(false);
             $.post(BASEMETHOD + "editApp", dados,
               function(data){
                 if (data["ok"])
                 {
                   showOk(data["ok"]);
                   abrirF5Listagem("/app/listarapp.env?id_site=" + ID_SITE + "&edicao=1");
                 } else if (data["error"]) {
                   showError(data["error"]);
                 }
                 aguarde(true);
               }, "json");
          }
      }
  }
  function aguarde(w)
  {
      var bts = document.getElementById('bt_salvar')
      var btp= document.getElementById('bt_salvarp')
      if (w)
      {
         bts.value = 'Salvar';
         bts.disabled = false;
         bts.onclick = validaForm;
      } else {
         bts.value = 'Aguarde...';
         bts.disabled = true;
         bts.onclick = function(){alert('Aguarde, processo em andamento...')};
      }
  }
  /*]]>*/
  </script>
</slot_script>

<slot_titulo metal:fill-slot="titulo">Instalar Aplicativo DA - Promo&ccedil;&atilde;o</slot_titulo>
<slot_ajuda metal:fill-slot="ajuda">Entre com os dados para configurar a instancia</slot_ajuda>

<slot_content metal:fill-slot="content">

  <div class="abas">
    <a id="a_aba_dados" href="javascript:mudarAba('dados');ocultarDivs();" class="tab3">Dados</a>
    <a id="a_aba_rss" href="javascript:mudarAba('rss');ocultarDivs();" class="tab2">Rss</a>
  </div>

  <form name="conteudo" method="post" enctype="multipart/form-data">
  <fieldset>
  <div id="div_aba_dados">
    <div class="formu">
      <label for="title">T&iacute;tulo:</label>
      <input type="text" class="full" id="title" name="title" tal:attributes="value dados/titulo"/>
    </div>
    <div class="formu">
      <label for="title">id servi&ccedil;o</label>
      <input type="text" class="full" id="id_servico" name="id_servico" tal:attributes="value dadoss/id_servico"/>
    </div>
    <div class="formu">
      <label for="title">Ips para bloqueio (separados por Enter ):</label>
      <textarea class="full" id="ips" name="ips" tal:attributes="value ips" tal:content="ips"></textarea>
    </div>
    <div class="formu">
      <label for="title">Tipo de bloqueio dos usu&aacute;rio sorteados:</label>
      <select name="tipo_bloqueio" class="full" id="tipo_bloqueio">
        <option value="periodo" tal:attributes="selected python: 'selected' if dadoss['tipo_bloqueio'] == 'periodo' else ''" >Per&iacute;odo</option>
        <option value="promocao" tal:attributes="selected python: 'selected' if dadoss['tipo_bloqueio'] == 'promocao' else ''">Promo&ccedil;&atilde;o</option>
      </select>
    </div>
    <div class="formu" >
      <label for="title" id="bloqperiodo" tal:attributes="style python:'display:block' if dadoss['tipo_bloqueio'] == 'periodo' else 'display:none'">Total de dias que o usu&aacute;rio ficar&aacute; bloqueado:</label>
      <label for="title" id="bloqnumero" tal:attributes="style python:'display:block' if dadoss['tipo_bloqueio'] == 'promocao' else 'display:none'">N de Promo&ccedil;&otilde;es que o usu&aacute;rio ficar&aacute; bloqueado:</label>
      <input type="text" id="bloqueio_numero" name="bloqueio_numero" tal:attributes="value dadoss/bloqueio_numero"/>
    </div>
    <div class="formu">
      <label for="title">Autentica&ccedil;&atilde;o:</label>
      <select name="auth" class="full">
      <option value="">Selecione</option>
      <tal:block tal:repeat="item python:portal._getPlugInstaled(env_site=id_site)">
      <tal:block tal:define="app python:portal._getPlug(env_site=id_site, id_plugin=item['id_plugin'])">
      <option tal:content="item/titulo" tal:condition="python:getattr(app['app'],'central',None)" tal:attributes="value item/id_plugin; selected python: util.test(int(dadoss['auth'])==int(item['id_plugin']), 'selected','')"></option>
      </tal:block>
      </tal:block>
      </select>
    </div>
    <div class="formu">
      <label for="title">Captcha:</label>
      <select name="captcha" class="full">
      <option value="">Selecione</option>
      <tal:block tal:repeat="item python:portal._getPlugInstaled(env_site=id_site)">
      <tal:block tal:define="app python:portal._getPlug(env_site=id_site, id_plugin=item['id_plugin'])">
      <option tal:content="item/titulo" tal:condition="python:getattr(app['app'], 'captcha', None)" tal:attributes="value item/id_plugin; selected python: util.test(int(dadoss['captcha'])==int(item['id_plugin']), 'selected','')"></option>
      </tal:block>
      </tal:block>
      </select>
    </div>
    <div class="formu">
      <label for="title">Tipo:</label>
      <select name="tipo" class="full">
        <option value="">Selecione</option>
        <option value="aberta" tal:attributes="selected python: util.test(dadoss['tipo']=='aberta', 'selected','')">Aberta</option>
        <option value="fechada" tal:attributes="selected python: util.test(dadoss['tipo']=='fechada', 'selected','')">Fechada</option>
      </select>
    </div>
  </div>
  

  <tal:block tal:define="macro python:here.macros('/api/configrss.env'); global drss dados/dados/rss">
    <tal:block metal:use-macro="macro/macros/edit" />
  </tal:block>

  </fieldset>

  <br/><br/>
  <div class="bts">
    <input id="bt_salvar" type="button" name="salvar" value="Salvar" class="f5bt ok" onclick="validaForm()"/>
  </div>

  </form>
</slot_content>

</metal_macro>
</tal:block>
